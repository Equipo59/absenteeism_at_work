# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_ACCOUNT_ID=your_aws_account_id_here

# EC2 Configuration
EC2_INSTANCE_TYPE=t3.micro
EC2_KEY_NAME=absenteeism-key
EC2_USER=ubuntu

# Docker Configuration
DOCKER_IMAGE_NAME=absenteeism-api

# Deployment Mode: 'local' or 'remote'
# - local: Deploy on current machine (for testing)
# - remote: Deploy infrastructure and deploy on EC2
DEPLOYMENT_MODE=local

# Terraform Configuration (for remote deployment)
TF_VAR_aws_region=us-east-1
TF_VAR_ec2_instance_type=t3.micro
TF_VAR_ec2_key_name=absenteeism-key
TF_VAR_ec2_ami_id=

# EC2 SSH Configuration (for remote deployment)
EC2_SSH_KEY_PATH=~/.ssh/absenteeism-key.pem

# Skip Infrastructure Creation (for remote mode)
SKIP_INFRASTRUCTURE=false

# Skip Docker Build (use existing image)
SKIP_DOCKER_BUILD=false
